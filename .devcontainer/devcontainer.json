{
	"name": "XDBC Server Development",
	"dockerComposeFile": ["../docker-xdbc.yml"],
	"service": "xdbc-server",
	"workspaceFolder": "/xdbc-server",
	"remoteUser": "root",
	"settings": {
	  "terminal.integrated.defaultProfile.linux": "bash",
	  "editor.formatOnSave": true
	},
	"extensions": [
	  "ms-vscode.cpptools",       // For C++ development
	  "ms-vscode.cmake-tools",    // CMake integration
	  "twxs.cmake",               // CMake syntax highlighting
	  "ms-python.python",         // Python extension if needed
	  "ms-azuretools.vscode-docker" // Docker tools
	],
	"postCreateCommand": "ldconfig",
	"mounts": [
	  "source=/dev/shm,target=/dev/shm,type=bind",
	  "source=~/XDBC/xdbc-server,target=/xdbc-server,type=bind"
	],
	"overrideCommand": false,
	"shutdownAction": "stopCompose"
  }
  